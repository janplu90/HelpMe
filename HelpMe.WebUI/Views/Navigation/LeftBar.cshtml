@model IEnumerable<string>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LeftBar</title>
</head>
<body>
    @Html.ActionLink("Home", "UserHomePanelForm", "UserHomePanel", null,
    new { @class = "btn btn-block btn-default btn-lg" })

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
{
    controller = "UserHomePanel",
    action = "UserHomePanelForm",
    category = link,
    page = 1
}, new
{
    @class = "btn btn-block btn-default btn-lg"
            + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
})
    }

    <div>
        @Html.ActionLink("AddEvent", "AddEventForm", "UserHomePanel", null, new { @class = "btn btn-block btn-default btn-lg"})
    </div>
    <div>
        @Html.ActionLink("YourEvents", "YourEventsForm", "UserHomePanel", null, new { @class = "btn btn-block btn-default btn-lg" })
    </div>
</body>
</html>
