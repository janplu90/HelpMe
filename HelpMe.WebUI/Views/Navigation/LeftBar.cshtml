@model IEnumerable<string>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LeftBar</title>
</head>
<body>
    @Html.ActionLink("Home", "UserHomePanelForm", "UserHomePanel", null,
    new { @class = "btn btn-block btn-default btn-lg" })

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
{
    controller = "UserHomePanel",
    action = "UserHomePanelForm",
    category = link,
    page = 1
}, new
{
    @class = "btn btn-block btn-default btn-lg"
            + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
})
    }

    @using (Html.BeginForm("SearchCity", "UserHomePanel"))
    {
    <form>
        <div class="input-group">
            <input name="SearchCityText" type="text" class="form-control" placeholder="Search by city">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    }

