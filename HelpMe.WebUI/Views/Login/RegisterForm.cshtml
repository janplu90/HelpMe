@model HelpMe.Domain.Entities.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>RegisterForm</title>
    <style>

       .form-control {
           background-color: whitesmoke;
       }
        .panel-body {
            background-color: darkgray;
        }
        .panel-heading{
            background-color:whitesmoke;
        }
    </style>

    <script>
        function changeText() {
            document.getElementById('boldStuff').innerHTML = 'Choosen';;
        }
        function change() {
            document.getElementById('boldStuff').innerText = 'Try again';;
        }
    </script>

</head>
<body>
    <div class="panel">
        <div class="panel-heading text-center"><h4>Registration</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm("RegisterForm", "Login", FormMethod.Post, new { enctype = "multipart/form-data"}))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Name:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Surname:</label>
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Login:</label>
                    @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Country:</label>
                    @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>City:</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Age:</label>
                    @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>About me:</label>
                    @Html.TextBoxFor(x => x.AboutMe, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div style="position:relative;">
                        <label>Photo:</label>
                        <a id="boldStuff" class='btn btn-primary' href='javascript:;'>
                            Choose file...
                            <input type="file" name="Image" size="40"
                                   style="position:absolute;z-index:2;top:0;
                            left:0;filter: alpha(opacity=0); opacity:0;
                            background-color:black;color:white;"
                                   onchange='$("#upload-file-info").html($(this).val());' />
                        </a>
                        <span class='label label-info' id="upload-file-info"></span>
                    </div>
                    </div>
               

                    <div class="row">
                        <input class="btn btn-success col-lg-6 pull-right" type="submit" value="Submit" />
                        <div class="btn btn-danger col-lg-6 pull-right">
                            @Html.ActionLink("Cancel","LoginForm", "Login", null, new { @style = "color:#ffffff;" })
                        </div>

                    </div>
            }
                    </div>
    </div>
</body>
</html>
