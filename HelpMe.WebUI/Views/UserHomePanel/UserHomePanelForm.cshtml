@using HelpMe.WebUI.HtmlHelpers;
@using HelpMe.WebUI.Models
@model EventListViewModel

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserHomePanelForm</title>
</head>
<body style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
    <div> 
       
@foreach (var e in Model.Events)
{
    
    <div class="well">

        <div class="row">
            <div class="col-lg-2">
                @if (e.ImageData != null)
                {
                    <div class="pull-left" style="margin-right: 10px">
                        <img class="img-thumbnail" width="100" height="125"
                             src="@Url.Action("GetImageForEvent", "UserHomePanel",
                new { @e.EventID })" />
                    </div>
                }
            </div>
            <div class="col-lg-7">
                <h3><strong>@e.Title</strong></h3>
                <div>
                        <span class="pull-left"> @e.Description</span>
                </div>
            </div>
            <div class="col-lg-3">
                <text class="pull-right" style="">@e.Date</text>
                <span class="pull-right" style="margin-top:10px; margin-left:40px">@e.Place</span>
            </div>

           
        </div>
        <div class="row" style="padding-top:15px">
            <div class="btn btn-primary pull-right col-lg-6">
                @Html.ActionLink("Help", "AcceptEvent", "Event", new { eventID = e.EventID }, new { @style = "color:#ffffff;" })
            </div>
            <div class="btn btn-info pull-right col-lg-6">
                @Html.ActionLink("View profile", "ProfileDescription", "Profile", new { userID = e.CreatorID }, new { @style = "color:#ffffff;" })
            </div>


        </div>

        </div>
        }
       
        <div class="btn-group pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("UserHomePanelForm", new { page = x, category = Model.CurrentCategory, city = Model.CurrentCity }))
        </div>
    </div>
</body>
</html>
